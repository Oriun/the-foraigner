{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "CommonJS", 
    "allowJs": true, 
    "checkJs": true, 
    "sourceMap": true, 
    "outDir": "dist", 
    "removeComments": true, 
    "strict": true, 
    "noImplicitAny": true, 
    "moduleResolution": "node", 
    "baseUrl": "./", 
    "allowSyntheticDefaultImports": true,  
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "index.ts",
    "src/**/*",
    "tests/**/*"
  ]
}